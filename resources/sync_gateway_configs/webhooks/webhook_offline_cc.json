{
    "interface":":4984",
    "adminInterface": "0.0.0.0:4985",
    "maxIncomingConnections": 0,
    "maxFileDescriptors": 90000,
    "compressResponses": false,
    {{ logging }}
    {{ sslcert }}
    {{ sslkey }}
    "databases":{
        "db":{
            {{ autoimport }}
            {{ xattrs }}
            {{ no_conflicts }}
            {{ sg_use_views }}
            {{ num_index_replicas }}
            {{ username }}
            {{ password }}
            {{ cacertpath }}
            {{ certpath }}
            {{ keypath }}
            {{ delta_sync }}
            "offline":false,
            "server":"{{ server_scheme }}://{{ couchbase_server_primary_node }}:{{ server_port }}",
            "bucket":"data-bucket",
            "sync": `function(doc){
                  channel(doc.channels);
                }`,
            "event_handlers": {
               "max_processes": 500,
               "wait_for_process": "600000",
               "document_changed":[{
                    "handler": "webhook",
                    "url": "http://{{ webhook_ip }}:8080",
                    "timeout": 60
                }],
               "db_state_changed":[{
                   "handler":"webhook",
                   "url":"http://{{ webhook_ip }}:8080",
                   "timeout":60
                }]
            }
        }
    }
}
