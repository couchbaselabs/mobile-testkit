{
  "interface": ":4984",
  "adminInterface": "0.0.0.0:4985",
  "maxIncomingConnections": 0,
  "maxFileDescriptors": 90000,
  "compressResponses": false,
  {{ sslcert }}
  {{ sslkey }}
  {{ logging }}
  "databases": {
    "db": {
      {{ autoimport }}
      {{ xattrs }}
      {{ no_conflicts }}
      {{ sg_use_views }}
      {{ num_index_replicas }}
      {{ username }}
      {{ password }}
      {{ cacertpath }}
      {{ certpath }}
      {{ keypath }}
      {{ delta_sync }}
      "unsupported": {
        "user_views": {
          "enabled":true
        }
      },
      "server": "{{ server_scheme }}://{{ couchbase_server_primary_node }}:{{ server_port }}",
      "bucket": "data-bucket",
      "roles": {
        "Scientist": {
          "admin_channels": [
            "Download"
          ]
        },
        "Researcher": {
          "admin_channels": [
            "Upload"
          ]
        }
      },
      "users": {
        "seth": {
          "password": "pass",
          "admin_channels": [
            "Create"
          ],
          "admin_roles": [
            "Scientist"
          ]
        },
        "raghu": {
          "password": "pass",
          "admin_channels": [
            "Edit"
          ],
          "admin_roles": [
            "Researcher"
          ]
        }
      }
    }
  }
}

