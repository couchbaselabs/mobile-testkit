{
  "logging": {
    "default": {
      "logFilePath": "/tmp/sg_logs/sg_log_rotation.log",
      "logKeys": ["*"],
      "logLevel": "debug",
      "rotation": {
        "maxsize": 1,
        "maxage": 30,
        "maxbackups": 2,
        "localtime": true
      }
    }
  },
  "databases": {
    "db": {
      {{ xattrs }}
      "server":"{{ server_scheme }}://{{ couchbase_server_primary_node }}:{{ server_port }}",
      "bucket":"data-bucket",
      "password": "password",
      "users": {"GUEST": {"disabled": false,"admin_channels": ["*"]}}
    }
  }
}