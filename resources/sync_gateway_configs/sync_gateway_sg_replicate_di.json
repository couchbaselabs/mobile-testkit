{
    "interface":":4984",
    "adminInterface": "0.0.0.0:4985",
    "maxIncomingConnections": 0,
    "maxCouchbaseConnections": 16,
    "maxFileDescriptors": 90000,
    "slowServerCallWarningThreshold": 500,
    "compressResponses": false,
    "log": ["CRUD+", "Cache+", "HTTP+", "Changes+", "Replicate"],
    "cluster_config": {
        "server":"{{ server_scheme }}://{{ couchbase_server_primary_node }}:{{ server_port }}",
        "data_dir":".",
        "bucket":"data-bucket",
        "username":"data-bucket",
        "password": "password"
    },
    "databases":{
        "db1":{
            "feed_type":"DCPSHARD",
            "server":"{{ server_scheme }}://{{ couchbase_server_primary_node }}:{{ server_port }}",
            "bucket":"data-bucket-1",
            "username":"data-bucket-1",
            "password": "password",
            "channel_index":{
                "num_shards":16,
                "server":"{{ server_scheme }}://{{ couchbase_server_primary_node }}:{{ server_port }}",
                "bucket":"index-bucket-1",
                "username":"index-bucket-1",
                "password": "password",
                "writer":{{ is_index_writer }}
            }
        },
        "db2":{
            "feed_type":"DCPSHARD",
            "server":"{{ server_scheme }}://{{ couchbase_server_primary_node }}:{{ server_port }}",
            "bucket":"data-bucket-2",
            "username":"data-bucket-2",
            "password": "password",
            "channel_index":{
                "server":"{{ server_scheme }}://{{ couchbase_server_primary_node }}:{{ server_port }}",
                "bucket":"index-bucket-2",
                "username":"index-bucket-2",
                "password": "password",
                "writer":{{ is_index_writer }}
            }
        }
    }
}

