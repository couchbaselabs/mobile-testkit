{
    "interface":":4984",
    "adminInterface": "0.0.0.0:4985",
    "maxIncomingConnections": 0,
    "maxFileDescriptors": 90000,
    "compressResponses": false,
    {{ logging }}
    {{ hide_product_version }}
    {{ sslcert }}
    {{ sslkey }}
    "databases": {
        "db1":{
            {{ autoimport }}
            {{ xattrs }}
            {{ no_conflicts }}
            {{ sg_use_views }}
            {{ num_index_replicas }}
            {{ cacertpath }}
            {{ certpath }}
            {{ keypath }}
            {{ delta_sync }}
            "server":"{{ server_scheme }}://{{ couchbase_server_primary_node }}:{{ server_port }}",
            "bucket":"data-bucket-1",
            "username":"data-bucket-1",
            "password": "password"
        },
        "db2":{
            {{ autoimport }}
            {{ xattrs }}
            {{ no_conflicts }}
            {{ sg_use_views }}
            {{ num_index_replicas }}
            {{ cacertpath }}
            {{ certpath }}
            {{ keypath }}
            {{ delta_sync }}
            "server":"{{ server_scheme }}://{{ couchbase_server_primary_node }}:{{ server_port }}",
            "bucket":"data-bucket-2",
            "username":"data-bucket-2",
            "password": "password"
        }
    }
}

